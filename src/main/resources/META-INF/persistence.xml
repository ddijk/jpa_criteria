    <persistence-unit name="myPU2" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- external jar should be in src/main/resources -->
        <class>nl.bytesoflife.clienten.data.AccountviewProject</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/advobot_test"/>
            <property name="javax.persistence.jdbc.password" value="advobot_test"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.user" value="advobot_test"/>
<!--            <property name="eclipselink.ddl-generation" value="none"/>-->
<!--            <property name="eclipselink.logging.level" value="FINEST"/>-->
<!--            <property name="eclipselink.logging.level.sql" value="FINE"/>-->
